{
  "name": "1c-platform-tools",
  "displayName": "1C: Platform tools",
  "description": "Расширение для Visual Studio Code с инструментами разработки для экосистемы 1C. Предоставляет удобный интерфейс для работы с проектами 1C, включая разбор обработок, отчетов и конфигураций.",
  "keywords": [
    "1c",
    "1с",
    "1c platform",
    "1c enterprise",
    "1с предприятие",
    "bsl"
  ],
  "version": "0.4.1",
  "publisher": "yellow-hammer",
  "repository": {
    "type": "git",
    "url": "https://github.com/yellow-hammer/vscode-1c-platform-tools"
  },
  "license": "MIT",
  "author": {
    "name": "Ivan Karlo",
    "email": "i.karlo@outlook.com",
    "url": "https://johnnyshut.github.io/"
  },
  "contributors": [
    "Ivan Karlo (i.karlo@outlook.com)"
  ],
  "icon": "resources/1c-icon.png",
  "galleryBanner": {
    "color": "#0000FF",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.103.0",
    "node": ">=20.0.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Snippets",
    "Testing"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:packagedef",
    "onCommand:1c-platform-tools.dependencies.initializePackagedef",
    "onCommand:1c-platform-tools.project.createFromWelcome",
    "onView:1c-platform-tools-projects-favorites",
    "onView:1c-platform-tools-projects-all",
    "onView:1c-platform-tools-projects-help",
    "onCommand:1c-platform-tools.projects.listOpen"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "1c-platform-tools-projects",
          "title": "Проекты 1С",
          "icon": "resources/1c-icon.svg"
        },
        {
          "id": "1c-platform-tools",
          "title": "Инструменты 1С",
          "icon": "resources/1c-icon.svg",
          "when": "1c-platform-tools.is1CProject == true"
        }
      ],
      "panel": [
        {
          "id": "1c-platform-tools-todo",
          "title": "Список дел",
          "icon": "resources/1c-icon.svg",
          "when": "1c-platform-tools.is1CProject == true"
        }
      ]
    },
    "views": {
      "1c-platform-tools-projects": [
        {
          "id": "1c-platform-tools-projects-favorites",
          "name": "Избранное",
          "contextualTitle": "Избранное"
        },
        {
          "id": "1c-platform-tools-projects-all",
          "name": "Все проекты",
          "contextualTitle": "Все проекты"
        },
        {
          "id": "1c-platform-tools-projects-help",
          "name": "Помощь и поддержка",
          "contextualTitle": "Помощь и поддержка"
        }
      ],
      "1c-platform-tools": [
        {
          "id": "1c-platform-tools",
          "name": "Команды",
          "when": "1c-platform-tools.is1CProject == true"
        }
      ],
      "1c-platform-tools-todo": [
        {
          "id": "1c-platform-tools-todo-list",
          "name": "Список дел",
          "when": "1c-platform-tools.is1CProject == true"
        }
      ]
    },
